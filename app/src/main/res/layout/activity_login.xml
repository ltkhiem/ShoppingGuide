<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeff"
    tools:context="com.nimah.khiem.shoppingguide.LoginActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/w"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_logintitle"
            android:text="Shopping Guide"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="4"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_loginname"
            android:hint="Enter username"
            android:layout_weight="1"
            android:textSize="15sp"
            android:paddingLeft="7dp"
            android:background="#99ffffff"
            android:drawableLeft="@drawable/ic_email_black"
            android:drawablePadding="2dp"
            android:drawableTint="#444444"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/et_loginpassword"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="#77ffffff"
            android:hint="Enter password"
            android:textSize="15sp"
            android:paddingLeft="7dp"
            android:password="true"
            android:drawableLeft="@drawable/ic_vpn_key_black"
            android:drawablePadding="2dp"
            android:drawableTint="#444444"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_originlogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="#653133"
            android:text="Sign in"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_facebooklogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:background="#0f2c58"
            android:textSize="12sp"
            android:text="Sign in with Facebook"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Forgot password?"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="New user? Sign up!"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_real_facebook_login"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</LinearLayout>
